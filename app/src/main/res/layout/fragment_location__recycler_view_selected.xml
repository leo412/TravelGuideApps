<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="fill_parent"
                                             android:layout_height="wrap_content"
                                             android:background="#f1f1f2"
                                             android:orientation="horizontal"
                                             tools:layout_editor_absoluteX="0dp"
                                             tools:layout_editor_absoluteY="25dp">

    <TextView
        android:id="@+id/duh2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="This shows locations you have selected."
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp"/>


    <Button
        android:id="@+id/load"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#24f235"
        android:text="Save/Load Locations"
android:textColor="#FFFFFF"
        android:visibility="visible"
        app:layout_constraintHorizontal_bias="0.892"
        app:layout_constraintLeft_toRightOf="@+id/duh2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="parent"

        tools:layout_editor_absoluteY="0dp"/>

    <Button
        android:id="@+id/sorting"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="#42dcf4"
        android:text="Sort"

        android:visibility="visible"
        app:layout_constraintHorizontal_bias="0.892"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/load"
        tools:layout_editor_absoluteY="0dp"/>

    <Button
        android:id="@+id/mapdirection"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="#4286f4"
        android:text="Get Directions!"

        android:visibility="visible"
        app:layout_constraintHorizontal_bias="0.892"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/load"
        tools:layout_editor_absoluteY="0dp"/>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/poilistRecyclerView"
        android:layout_width="368dp"
        android:layout_height="0dp"
        android:background="#f1f1f2"
        android:divider="#b5b5b5"
        android:dividerHeight="1dp"
        android:listSelector="@drawable/list_selector"
        android:paddingBottom="310dp"
        android:scrollbars="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mapdirection"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="50dp"/>


</android.support.constraint.ConstraintLayout>
