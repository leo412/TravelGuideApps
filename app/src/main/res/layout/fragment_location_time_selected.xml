<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context="com.example.user.travelguideapps.LocationDetails.Time_Selection_Fragment"
                                             tools:layout_editor_absoluteX="0dp"
                                             tools:layout_editor_absoluteY="25dp">

    <!-- TODO: Update blank fragment layout -->


    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/empty_clock"

android:layout_marginTop="50dp"

        />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:width="300dp"
    app:layout_constraintTop_toBottomOf="@id/empty_clock"
    android:text="You can only manage time after adding the location to tables"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
android:id="@+id/empty_time_text"
    android:layout_gravity="center"
    android:gravity="center"    />
    <ImageButton
        android:id="@+id/selectstarttimebutton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="fitCenter"

        app:layout_constraintLeft_toLeftOf="@+id/SelectedDateText"
        app:layout_constraintTop_toBottomOf="@+id/SelectedTimeFrom"
        />
    <ImageButton
        android:id="@+id/resetdatetimebutton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="fitCenter"

        app:layout_constraintLeft_toRightOf="@+id/selectstarttimebutton"
        app:layout_constraintTop_toBottomOf="@+id/SelectedTimeFrom"
        />
    <TextView
        android:id="@+id/SelectedDateText"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:background="#1265ea"
android:textSize="15dp"
        android:paddingLeft="10dp"
        android:text="Starting Time: "

        android:textColor="#ffffff"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />


    <TextView
        android:id="@+id/SelectedTimeFrom"
        android:paddingLeft="10dp"
        android:textSize="15dp"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="N/A"
        app:layout_constraintLeft_toLeftOf="@+id/SelectedDateText"
        app:layout_constraintTop_toBottomOf="@+id/SelectedDateText"
        />

    <TextView
        android:id="@+id/timedurationtext"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:textSize="15dp"

        android:background="#1265ea"

        android:paddingLeft="10dp"
        android:text="Durations"
        android:textColor="#ffffff"
        app:layout_constraintLeft_toLeftOf="@+id/SelectedDateText"
        app:layout_constraintTop_toBottomOf="@+id/selectstarttimebutton"
        />

    <TextView
        android:id="@+id/timeduration"
        android:paddingLeft="10dp"
        android:textSize="15dp"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="N/A"
        app:layout_constraintLeft_toLeftOf="@+id/SelectedDateText"
        app:layout_constraintTop_toBottomOf="@+id/timedurationtext"
        />

    <ImageButton
        android:id="@+id/setdurationbutton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="fitCenter"
        android:text="Select Durations"
        app:layout_constraintLeft_toLeftOf="@+id/SelectedDateText"

        app:layout_constraintTop_toBottomOf="@+id/timeduration"
        tools:layout_editor_absoluteX="8dp"/>


    <TextView
        android:id="@+id/endingtimetext"
        android:layout_width="368dp"
        android:layout_height="wrap_content"

        android:background="#1265ea"
        android:textSize="15dp"

        android:paddingLeft="10dp"
        android:text="Ending Time"
        android:textColor="#ffffff"
        app:layout_constraintLeft_toLeftOf="@+id/SelectedDateText"
        app:layout_constraintTop_toBottomOf="@+id/setdurationbutton"
        />

    <TextView
        android:id="@+id/endingtime"
        android:paddingLeft="10dp"
        android:textSize="15dp"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="N/A"
        app:layout_constraintLeft_toLeftOf="@+id/SelectedDateText"
        app:layout_constraintTop_toBottomOf="@+id/endingtimetext"
        />
