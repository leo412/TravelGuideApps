<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:isScrollContainer="false"
                                             app:layout_behavior="@string/appbar_scrolling_view_behavior"
                                             tools:context=".LocationDetails.LocationDetails">

    <!-- TODO: Update blank fragment layout -->


    <TextView
        android:id="@+id/textViewAddressText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/textViewAdress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/textViewAddressText"
        android:text="Place Address PlaceHolder"
        android:textColor="?android:textColorSecondary"
        android:visibility="visible"
        app:layout_gravity="fill_horizontal"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"/>


    <TextView
        android:id="@+id/textViewPhoneNumberText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone Number"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/textViewAdress"
        />

    <TextView
        android:id="@+id/textViewPhoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/textViewPhoneNumberText"
        android:text="Phone PlaceHolder"
        android:textColor="?android:textColorSecondary"
        android:visibility="visible"
        app:layout_gravity="fill_horizontal"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/textViewWebsiteText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Website"
        app:layout_constraintTop_toBottomOf="@id/textViewPhoneNumber"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/textViewWebsite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/textViewWebsiteText"
        android:text="This Location has no website."
        android:textColor="?android:textColorSecondary"
        android:visibility="visible"
        app:layout_gravity="fill_horizontal"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:autoLink="web"
        />


    <TextView
        android:id="@+id/textViewOpenNowText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Opening now?"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/textViewWebsite"
        />

    <TextView
        android:id="@+id/textViewOpenNow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/textViewOpenNowText"
        android:text="This place does not show opening hours"
        android:textColor="?android:textColorSecondary"
        android:visibility="visible"
        app:layout_gravity="fill_horizontal"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/Monday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/textViewOpenNow"
        android:text=""
        android:textColor="?android:textColorSecondary"
        android:visibility="visible"
        app:layout_gravity="fill_horizontal"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/Tuesday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/Monday"
        android:text=""
        android:textColor="?android:textColorSecondary"
        android:visibility="visible"
        app:layout_gravity="fill_horizontal"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/Wednesday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/Tuesday"
        android:text=""
        android:textColor="?android:textColorSecondary"
        android:visibility="visible"
        app:layout_gravity="fill_horizontal"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/Thursday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/Wednesday"
        android:text=""
        android:textColor="?android:textColorSecondary"
        android:visibility="visible"
        app:layout_gravity="fill_horizontal"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/Friday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/Thursday"
        android:text=""
        android:textColor="?android:textColorSecondary"
        android:visibility="visible"
        app:layout_gravity="fill_horizontal"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/Saturday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/Friday"
        android:text=""
        android:textColor="?android:textColorSecondary"
        android:visibility="visible"
        app:layout_gravity="fill_horizontal"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"/>



    <TextView
        android:id="@+id/Sunday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/Saturday"
        android:text=""
        android:textColor="?android:textColorSecondary"
        android:visibility="visible"
        app:layout_gravity="fill_horizontal"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"/>





</android.support.constraint.ConstraintLayout>
