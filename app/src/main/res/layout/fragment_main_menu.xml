<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10"
    android:background="@drawable/mainmenu"

    tools:context="com.example.user.travelguideapps.MainMenu.MainMenuActivityFragment"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">

    <ImageView

        android:id="@+id/editimage"
        android:layout_width="119dp"
        android:layout_height="120dp"
        android:layout_marginTop="16dp"
        android:adjustViewBounds="false"
        app:layout_constraintTop_toTopOf="@+id/main_Menu_Edit_Button"
        app:layout_constraintLeft_toLeftOf="@id/main_Menu_Edit_Button"

        app:srcCompat="@drawable/editicon"
        tools:elevation="500dp"
        tools:layout_editor_absoluteX="224dp"/>
    <ImageView

        android:id="@+id/searchimage"
        android:layout_width="119dp"
        android:layout_height="120dp"
        android:layout_marginTop="16dp"
        android:adjustViewBounds="false"
        app:layout_constraintTop_toTopOf="@+id/main_Menu_Search_Button"
app:layout_constraintLeft_toLeftOf="@id/main_Menu_Search_Button"
        app:srcCompat="@drawable/searchicon"
        tools:elevation="500dp"
        tools:layout_editor_absoluteX="44dp"/>
    <Button
        android:id="@+id/main_Menu_Search_Button"

        android:layout_width="180dp"
        android:layout_height="250dp"
        app:layout_constraintHorizontal_weight="1"
        android:background="#BF54c9f7"
        android:fontFamily="sans-serif"
        android:text="Search"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:drawablePadding="-100dp"

        app:layout_constraintRight_toLeftOf="@+id/main_Menu_Edit_Button"
        >


        </Button>


    <Button
        app:layout_constraintHorizontal_weight="1"

        android:id="@+id/main_Menu_Edit_Button"
        android:layout_width="180dp"
        android:layout_height="250dp"
        android:background="#BFff2b91"
        android:text="Edit"
        app:srcCompat="@android:drawable/ic_search_category_default"
        app:layout_constraintLeft_toRightOf="@+id/main_Menu_Search_Button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />



</android.support.constraint.ConstraintLayout>
