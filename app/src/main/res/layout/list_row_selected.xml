<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="fill_parent"
                                             android:layout_height="wrap_content"
                                             android:minHeight="100dp"
                                             android:background="@drawable/list_selector"
                                             android:listSelector="@drawable/list_selector"
                                             android:orientation="horizontal"
    >


    <!--  ListRow Left sied Thumbnail image -->

    <ImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/list_image"
        android:layout_width="100dip"
        android:layout_height="100dip"
        android:adjustViewBounds="true"
        android:padding="3dp"
        android:background="#f4c542"

        />

    <!-- Title Of Song-->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:ellipsize="marquee"
        android:focusable="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:text="title"
        android:textColor="#040404"
        android:textSize="15dip"
        android:textStyle="bold"
        android:typeface="sans"
        app:layout_constraintLeft_toRightOf="@id/list_image"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1"


        />

    <!-- Artist Name -->
    <TextView
        android:id="@+id/vicinity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:ellipsize="marquee"
        android:focusable="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:maxLines="1"
        android:paddingRight="100dp"
        android:text="vicinity"
        android:textColor="#343434"
        android:textSize="10dip"
        app:layout_constraintLeft_toLeftOf="@+id/title"
        app:layout_constraintLeft_toRightOf="@id/list_image"
        app:layout_constraintTop_toBottomOf="@+id/title"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1"
        />

    <RatingBar
        android:id="@+id/ratingBar"

        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        app:layout_constraintLeft_toLeftOf="@+id/vicinity"
        app:layout_constraintTop_toBottomOf="@+id/vicinity"
        tools:layout_constraintLeft_creator="1"

        tools:layout_constraintTop_creator="1"/>
    <!-- Rightend Duration -->
    <TextView
        android:id="@+id/locationvisittime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:text="vicinity"
        android:textColor="#343434"
        android:textSize="10dip"
        app:layout_constraintLeft_toLeftOf="@+id/title"
        app:layout_constraintLeft_toRightOf="@id/list_image"
        app:layout_constraintTop_toBottomOf="@+id/vicinity"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1"
        />

    <TextView
        android:id="@+id/lat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:text="Testing pls dont replace "
        android:textColor="#10bcc9"
        android:textSize="10dip"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"/>


    <TextView
        android:id="@+id/rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="right"
        android:text="5:45"
        android:textColor="#10bcc9"
        android:textSize="10dip"

        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"/>


    <TextView
        android:id="@+id/lng"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:text="5:45"
        android:textColor="#10bcc9"
        android:textSize="10dip"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1"/>

    <TextView
        android:id="@+id/place_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:text="PLACEHOLDERID"
        android:textColor="#10bcc9"
        android:textSize="10dip"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintLeft_toRightOf="@+id/lng"
        app:layout_constraintRight_toRightOf="@+id/lng"
        app:layout_constraintTop_toBottomOf="@+id/lng"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"/>

    <ImageButton
        android:id="@+id/details_btn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:background= "#00000000"
        android:focusable="false"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:text="View Details"

        app:layout_constraintLeft_toLeftOf="@id/title"
        app:layout_constraintLeft_toRightOf="@id/list_image"
        app:layout_constraintTop_toBottomOf="@id/locationvisittime"/>


    <ImageButton
        android:id="@+id/directions_btn"
        android:layout_width="30dp"

        android:layout_height="30dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:background= "#00000000"
        android:focusable="false"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"

        android:text="View Details"
        app:layout_constraintLeft_toRightOf="@id/details_btn"
        app:layout_constraintTop_toBottomOf="@id/locationvisittime"/>

    <ImageButton
        android:id="@+id/google_details_btn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:background= "#00000000"
        android:focusable="false"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"

        android:text="View Details"
        app:layout_constraintLeft_toRightOf="@id/directions_btn"
        app:layout_constraintTop_toBottomOf="@id/locationvisittime"/>

    <ImageButton
        android:id="@+id/time_btn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:background= "#00000000"
        android:focusable="false"
        android:scaleType="fitCenter"
        android:text="View Details"        android:adjustViewBounds="true"

        app:layout_constraintLeft_toRightOf="@id/google_details_btn"
        app:layout_constraintTop_toBottomOf="@id/locationvisittime"/>

    <ImageView
        android:id="@+id/selectedimage"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginRight="10dp"
        android:adjustViewBounds="true"
        android:background= "#00000000"

        android:visibility="gone"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ratingBar"
        />
<ImageView
    android:layout_width="50dp"
    android:layout_height="50dp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@id/list_image"
    android:visibility="visible"

    android:id="@+id/arrow_down"
    android:background= "#00000000"
    android:focusable="false"
    android:scaleType="fitStart"

    android:adjustViewBounds="true"
    />



    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintRight_toLeftOf="@id/arrow_down"

        app:layout_constraintTop_toBottomOf="@id/list_image"
        android:visibility="visible"
        android:id="@+id/distance"
        android:background= "#00000000"
        android:focusable="false"
        android:scaleType="fitStart"

        android:adjustViewBounds="true"
        />
    <TextView
        android:id="@+id/distance_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="distance"
        android:textColor="#10bcc9"
        android:textSize="10dip"
        android:textStyle="bold"
        app:layout_constraintRight_toLeftOf="@id/distance"
       app:layout_constraintTop_toTopOf="@id/arrow_down"
        app:layout_constraintBottom_toBottomOf="@id/arrow_down"



        />
    <ImageView
    android:layout_width="50dp"
    android:layout_height="50dp"
    app:layout_constraintLeft_toRightOf="@id/arrow_down"
    app:layout_constraintTop_toBottomOf="@id/list_image"
    android:visibility="visible"
    android:id="@+id/duration"
    android:background= "#00000000"
    android:focusable="false"
    android:scaleType="fitStart"

    android:adjustViewBounds="true"
    />

    <TextView
        android:id="@+id/duration_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="duration"
        android:textColor="#10bcc9"
        android:textSize="10dip"
        android:textStyle="bold"
app:layout_constraintLeft_toRightOf="@id/duration"
        app:layout_constraintTop_toTopOf="@id/arrow_down"
        app:layout_constraintBottom_toBottomOf="@id/arrow_down"



        />
</android.support.constraint.ConstraintLayout>