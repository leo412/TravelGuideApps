<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="0dp"
    android:fitsSystemWindows="true"
    android:launchMode="singleTask"
    android:visibility="visible"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    app:layout_constraintLeft_toLeftOf="@+id/relativeLayout"
    tools:layout_editor_absoluteY="81dp"
    tools:openDrawer="start">




    <android.support.constraint.ConstraintLayout
        android:id="@+id/relativeLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintTop_creator="1">

        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="0dp"
            android:layout_height="200dp"
            tools:context="com.example.user.travelguideapps.MapsActivity"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent">


        </fragment>

        <LinearLayout
            android:layout_alignParentBottom="true"

            android:layout_width="0dp"
            android:layout_height="350dp"
            android:layout_below="@id/map"

            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:visibility="visible"
            android:background="#ffffffff"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:context="com.example.user.travelguideapps.MapsActivity"

            android:id="@+id/linearLayout"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.987">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="97dp"
    android:orientation="vertical">
    <com.hrules.horizontalnumberpicker.HorizontalNumberPicker
        android:id="@+id/radiusPicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

            <TextView
                android:id="@+id/duration_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Duration=?"
                android:textColor="?android:textColorSecondary"
                android:visibility="visible"

                map:layout_gravity="fill_horizontal"/>

            <TextView
                android:id="@+id/distance_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Distance=?"
                android:textColor="?android:textColorSecondary"
                android:visibility="visible"

                map:layout_gravity="fill_horizontal"/>


            <TextView
                android:id="@+id/from_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="From"
                android:textColor="?android:textColorSecondary"
                android:visibility="gone"

                map:layout_gravity="fill_horizontal"/>

            <AutoCompleteTextView
                android:id="@+id/from"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:completionThreshold="3"
                android:visibility="gone"

                map:layout_gravity="fill_horizontal"/>

            <TextView
                android:id="@+id/to_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="To"
                android:textColor="?android:textColorSecondary"

                android:visibility="gone"
                map:layout_gravity="fill_horizontal"/>

            <AutoCompleteTextView
                android:id="@+id/to"
                android:layout_width="64dp"
                android:layout_height="wrap_content"
                android:completionThreshold="3"
                android:visibility="gone"

                map:layout_gravity="fill_horizontal"/>
</LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/load_directions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Go"
                    android:visibility="gone"
                    map:layout_columnSpan="1"

                    map:layout_gravity="fill_horizontal"/>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <Button
                            android:id="@+id/Bar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bar"
                            map:layout_columnSpan="1"
                            map:layout_gravity="fill_horizontal"/>

                        <Button
                            android:id="@+id/Bank"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bank"
                            map:layout_columnSpan="1"
                            map:layout_gravity="fill_horizontal"/>

                        <Button
                            android:id="@+id/amusement_park"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="amusement_park"
                            map:layout_columnSpan="1"
                            map:layout_gravity="fill_horizontal"/>

                        <Button
                            android:id="@+id/cafe"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="cafe"
                            map:layout_columnSpan="1"
                            map:layout_gravity="fill_horizontal"/>

                        <Button
                            android:id="@+id/casino"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="casino"
                            map:layout_columnSpan="1"
                            map:layout_gravity="fill_horizontal"/>

                        <Button
                            android:id="@+id/night_club"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="night_club"
                            map:layout_columnSpan="1"
                            map:layout_gravity="fill_horizontal"/>


                    </LinearLayout>

                </HorizontalScrollView>
            </LinearLayout>

            <FrameLayout
                android:id="@+id/list_form"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ProgressBar
                    android:id="@+id/maps_progress"
                    style="?android:attr/progressBarStyleLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="8dp"
                    android:visibility="gone"/>


                <ImageView
                    android:id="@+id/empty_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_centerInParent="true"

                    map:srcCompat="@drawable/arrow_point_upward"/>

                <TextView
                    android:id="@android:id/empty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Click on above items to show available locations!"
                    android:textColor="#525252"
                    android:textSize="19.0sp"
                    android:visibility="gone"
                    android:layout_below="@id/empty_arrow"

                    />

                <ListView
                    android:id="@+id/poilist"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:divider="#b5b5b5"
                    android:dividerHeight="1dp"
                    android:listSelector="@drawable/list_selector"/>
            </FrameLayout>
        </LinearLayout>
    </android.support.constraint.ConstraintLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/relativeLayout"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/relativeLayout"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        android:id="@+id/relativeLayout2">

    </RelativeLayout>


</android.support.constraint.ConstraintLayout>
