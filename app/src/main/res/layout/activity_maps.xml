<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:launchMode="singleTask"
    android:fitsSystemWindows="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:openDrawer="start">


    <LinearLayout

        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.example.user.travelguideapps.MapsActivity"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:map="http://schemas.android.com/apk/res-auto"
                  xmlns:tools="http://schemas.android.com/tools"
                  android:id="@+id/map"
                  android:name="com.google.android.gms.maps.SupportMapFragment"
                  android:layout_width="match_parent"
                  android:layout_height="200dp"
                  tools:context="com.example.user.travelguideapps.MapsActivity">



        </fragment>


        <TextView
            android:id="@+id/duration_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Duration=?"
            android:textColor="?android:textColorSecondary"
            android:visibility="visible"

            map:layout_gravity="fill_horizontal"/>

        <TextView
            android:id="@+id/distance_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Distance=?"
            android:textColor="?android:textColorSecondary"
            android:visibility="visible"

            map:layout_gravity="fill_horizontal"/>


        <TextView
            android:id="@+id/from_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="From"
            android:textColor="?android:textColorSecondary"
            android:visibility="gone"

            map:layout_gravity="fill_horizontal"/>

        <AutoCompleteTextView
            android:id="@+id/from"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:completionThreshold="3"
            android:visibility="gone"

            map:layout_gravity="fill_horizontal"/>

        <TextView
            android:id="@+id/to_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="To"
            android:textColor="?android:textColorSecondary"

            android:visibility="gone"
            map:layout_gravity="fill_horizontal"/>

        <AutoCompleteTextView
            android:id="@+id/to"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:completionThreshold="3"
            android:visibility="gone"

            map:layout_gravity="fill_horizontal"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">


            <Button
                android:id="@+id/load_directions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Go"
                android:visibility="gone"
                map:layout_columnSpan="1"

                map:layout_gravity="fill_horizontal"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/Bar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bar"
                        map:layout_columnSpan="1"
                        map:layout_gravity="fill_horizontal"/>

                    <Button
                        android:id="@+id/Bank"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bank"
                        map:layout_columnSpan="1"
                        map:layout_gravity="fill_horizontal"/>

                    <Button
                        android:id="@+id/amusement_park"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="amusement_park"
                        map:layout_columnSpan="1"
                        map:layout_gravity="fill_horizontal"/>

                    <Button
                        android:id="@+id/cafe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="cafe"
                        map:layout_columnSpan="1"
                        map:layout_gravity="fill_horizontal"/>

                    <Button
                        android:id="@+id/casino"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="casino"
                        map:layout_columnSpan="1"
                        map:layout_gravity="fill_horizontal"/>

                    <Button
                        android:id="@+id/night_club"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="night_club"
                        map:layout_columnSpan="1"
                        map:layout_gravity="fill_horizontal"/>


                </LinearLayout>

            </HorizontalScrollView>
        </LinearLayout>

        <FrameLayout
            android:id="@+id/list_form"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ProgressBar
                android:id="@+id/maps_progress"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginBottom="8dp"
                android:visibility="gone"/>


            <TextView
                android:id="@android:id/empty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="NO LOCATION AVAILABLE!"
                android:textColor="#525252"
                android:textSize="19.0sp"
                android:visibility="gone"/>

            <ListView
                android:id="@+id/poilist"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:divider="#b5b5b5"
                android:dividerHeight="1dp"
                android:listSelector="@drawable/list_selector"/>
        </FrameLayout>
    </LinearLayout>


</android.support.constraint.ConstraintLayout>
