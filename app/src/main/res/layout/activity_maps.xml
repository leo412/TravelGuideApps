<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="0dp"
    android:fitsSystemWindows="true"
    android:launchMode="singleTask"
    android:visibility="visible"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    app:layout_constraintLeft_toLeftOf="@+id/relativeLayout"
    tools:layout_editor_absoluteY="81dp"
    tools:openDrawer="start"
    android:background="@android:color/white"


    >


    <ProgressBar
        android:id="@+id/maps_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        tools:layout_editor_absoluteX="3840dp"
        tools:layout_editor_absoluteY="7135dp"/>




    <TextView
        android:id="@+id/empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click on above items to show available locations!"
        android:textColor="#525252"
        android:textSize="19.0sp"
        android:visibility="visible"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp"/>
    <android.support.design.widget.TabLayout
        android:id="@+id/tabs"
        style="@style/amu_Bubble.TextAppearance.Light"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:tabGravity="fill"
        app:tabMode="fixed"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/vpPagerpoilist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toBottomOf="@+id/expandable_layout"
        app:layout_constraintLeft_toRightOf="parent">

        <android.support.v4.view.PagerTabStrip
            android:id="@+id/pager_header"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:paddingBottom="4dp"
            android:paddingTop="4dp" />

    </android.support.v4.view.ViewPager>







    <net.cachapa.expandablelayout.ExpandableLayout
        android:id="@+id/expandable_layout"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        map:el_duration="1000"
        map:el_expanded="true"
        map:el_parallax="0.5"

        app:layout_constraintTop_toBottomOf="@+id/map"
        tools:layout_editor_absoluteX="8dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_blue_bright"

            >


            <TextView
                android:id="@+id/duration_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Duration=?"
                android:textColor="?android:textColorSecondary"
                android:visibility="visible"

                map:layout_constraintLeft_toLeftOf="parent"

                map:layout_constraintTop_toTopOf="parent"

                />


            <TextView
                android:id="@+id/distance_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Distance=?"
                android:textColor="?android:textColorSecondary"
                android:visibility="visible"

                map:layout_constraintLeft_toLeftOf="parent"
                map:layout_constraintTop_toBottomOf="@+id/duration_label"
                />


            <com.appyvet.rangebar.RangeBar
                xmlns:custom="http://schemas.android.com/apk/res-auto"
                android:id="@+id/pricerangebar"
                android:layout_width="169dp"
                android:layout_height="42dp"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                custom:layout_constraintHorizontal_bias="0.0"
                custom:layout_constraintLeft_toRightOf="@+id/cheapest"
                custom:layout_constraintRight_toRightOf="parent"
                custom:layout_constraintTop_toBottomOf="@+id/distance_label"
                custom:tickEnd="4"
                custom:tickInterval="1"
                custom:tickStart="0"/>

            <com.hrules.horizontalnumberpicker.HorizontalNumberPicker
                android:id="@+id/radiusPicker"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                map:layout_constraintLeft_toLeftOf="parent"
                map:layout_constraintRight_toRightOf="parent"
                map:layout_constraintTop_toBottomOf="@+id/pricerangebar"
                />

            <TextView
                android:id="@+id/cheapest"
                android:layout_width="71dp"
                android:layout_height="21dp"
                android:text="Cheapest"
                android:textColor="?android:textColorSecondary"
                android:visibility="visible"
                map:layout_constraintTop_toBottomOf="@+id/distance_label"
                map:layout_gravity="fill_horizontal"
                tools:layout_editor_absoluteX="21dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:layout_marginStart="11dp"
                android:text="Expensive"
                android:textColor="?android:textColorSecondary"
                android:visibility="visible"
                map:layout_constraintLeft_toRightOf="@+id/pricerangebar"
                map:layout_constraintTop_toBottomOf="@+id/distance_label"
                map:layout_gravity="fill_horizontal"/>


            <Button
                android:id="@+id/selecttypes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Go Go"
                map:layout_gravity="fill_horizontal"
                app:layout_constraintTop_toBottomOf="@+id/categories_expandable_layout"
                tools:layout_editor_absoluteX="0dp"/>



            <HorizontalScrollView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/HorizontalScroll"
android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@+id/categories_expandable_layout"
                tools:layout_editor_absoluteX="0dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                    <Button
                        android:id="@+id/Bar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bar"
                        map:layout_columnSpan="1"
                        map:layout_gravity="fill_horizontal"/>

                    <Button
                        android:id="@+id/Bank"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bank"
                        map:layout_columnSpan="1"
                        map:layout_gravity="fill_horizontal"/>

                    <Button
                        android:id="@+id/amusement_park"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="amusement_park"
                        map:layout_columnSpan="1"
                        map:layout_gravity="fill_horizontal"/>

                    <Button
                        android:id="@+id/cafe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="cafe"
                        map:layout_columnSpan="1"
                        map:layout_gravity="fill_horizontal"/>

                    <Button
                        android:id="@+id/casino"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="casino"
                        map:layout_columnSpan="1"
                        map:layout_gravity="fill_horizontal"/>

                    <Button
                        android:id="@+id/night_club"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="night_club"
                        map:layout_columnSpan="1"
                        map:layout_gravity="fill_horizontal"/>


                </LinearLayout>

            </HorizontalScrollView>

            <Button
                android:text="Categories"
                android:id="@+id/OpenCategoriesView"
                android:src="@drawable/ic_menu_share"
                app:layout_constraintTop_toBottomOf="@id/radiusPicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <net.cachapa.expandablelayout.ExpandableLayout
                android:id="@+id/categories_expandable_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                map:el_duration="1000"
                map:el_expanded="true"
                map:el_parallax="0.5"

                app:layout_constraintTop_toBottomOf="@+id/OpenCategoriesView"
                tools:layout_editor_absoluteX="0dp">
<android.support.constraint.ConstraintLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

                <CheckBox android:id="@+id/barCheckBox"
                          android:text="Bar"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"

                          tools:layout_editor_absoluteY="350dp"
                          tools:layout_editor_absoluteX="0dp"/>
                <CheckBox android:id="@+id/restaurantCheckBox"
                          android:text="Restaurant"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
app:layout_constraintLeft_toRightOf="@+id/barCheckBox"
                          tools:layout_editor_absoluteY="350dp"/>
                <CheckBox android:id="@+id/amusement_parkCheckBox"
                          android:text="Amusement Park"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          app:layout_constraintLeft_toRightOf="@+id/restaurantCheckBox"

                          tools:layout_editor_absoluteY="350dp"/>

    <CheckBox android:id="@+id/libraryCheckBox"
              android:text="Library"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
app:layout_constraintTop_toBottomOf="@id/barCheckBox"
              tools:layout_editor_absoluteY="350dp"/>
    <CheckBox android:id="@+id/shopping_mallCheckBox"
              android:text="Shopping Mall"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              app:layout_constraintLeft_toRightOf="@+id/libraryCheckBox"
              app:layout_constraintTop_toBottomOf="@id/barCheckBox"

              tools:layout_editor_absoluteY="350dp"/>








</android.support.constraint.ConstraintLayout>


            </net.cachapa.expandablelayout.ExpandableLayout>
        </android.support.constraint.ConstraintLayout>


    </net.cachapa.expandablelayout.ExpandableLayout>


    <Button
        android:id="@+id/opensetting"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginBottom="1dp"
        android:text="Toggle"

        android:visibility="visible"
        map:layout_columnSpan="1"
        map:layout_constraintBottom_toBottomOf="@+id/map"
app:layout_constraintLeft_toLeftOf="parent"        map:layout_gravity="fill_horizontal"/>

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="0dp"
        android:layout_height="200dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:context="com.example.user.travelguideapps.MapsActivity"


        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1">


    </fragment>


</android.support.constraint.ConstraintLayout>
